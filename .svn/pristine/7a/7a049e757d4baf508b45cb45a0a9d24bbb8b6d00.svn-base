.row(ng-show="mostrar")
	.col-lg-2.col-md-2.col-xs-2
	form.col-lg-6.col-md-6.col-xs-6
		.alert.alert-danger(ng-show="error")
			.strong Error!
			|Código:{{errorMsg.errorCode}}
		fieldset.form-group
			
				legend Edición de proyectos
				.form-group
					label Nombre
					input.form-control(type="text",ng-model="data.nombre",required)
				.form-group
					label Descripción
					input.form-control(type="text",ng-model="data.descripcion",required)
				.form-group
					label Fecha inicio
					input.form-control(type="text",ng-model="data.fechaInicio",required)
				.form-group
					label Fecha fin
					input.form-control(type="text",ng-model="data.fechaFin")
				input.btn.btn-primary(type="button",ng-click="actualizarProyecto()",value="Editar")
				a.btn.btn-info(href='#/proyectos/', role="button") Volver

		.alert.alert-success(ng-show="mostrar&&opSuccess")
			.strong Éxito
			|Operación completada