$icon-font-path: "../bower_components/bootstrap-sass-official/assets/fonts/bootstrap/";
// bower:scss
@import "../../bower_components/bootstrap-sass-official/assets/stylesheets/_bootstrap.scss";
// endbower

/* Cursor para los a sin href */
a{
    cursor: pointer;
}

/* Activación de submenú en :hover */
.dropdown:hover{
    background: #e7e7e7;
    color: #555;
    
    .dropdown-menu{
        display: block;
    }
}

.jumbotron{
  h1{
    text-align: center;
  }
}

.index-container{
  h2{
    font-size: 2em;
    text-align: center;
  }
}
.panel{
    margin-top: 20px;
}
form{
    a.btn{
        margin-left: 1em;
    }
}
.gp-info{
    margin-top: 20px;
}

.gp-igroup{
	.input-group{
		.form-control{
			&:first-child{
				border-bottom-left-radius: 0;
				border-bottom:0;
			}
			&:last-of-type{
				border-top:0;
				border-bottom-left-radius: 4px;
			}
		}
	}
	
	.input-group-btn{
		.btn{
				border:0;
    			height: 100%;
    			margin: 0;
    			padding-top: 0;
    			padding-bottom: 0;
    			position: absolute;
    			top: 0;
		}
	}
}