.ng-cloak
	form.container(ng-submit="actualizarItem()")
		legend Formulario editar items
		.row
			.col-sm-4.col-xs-4.col-md-4.col-lg-4
			label nombre
		.row 
			.col-sm-4.col-xs-4.col-md-4.col-lg-4
			.col-sm-4.col-xs-4.col-md-4.col-lg-4
				input.form-control(name="nombre",type='text', ng-model="data.nombre",oninvalid="this.setCustomValidity('Nombre necesario')" required)
		.row
			.col-sm-4.col-xs-4.col-md-4.col-lg-4
			label Descripción
		.row
			.col-sm-4.col-xs-4.col-md-4.col-lg-4
			.col-sm-4.col-xs-4.col-md-4.col-lg-4
				input.form-control(name="descripcion",type="text",ng-model="data.descripcion",oninvalid="this.setCustomValidity('Necesaria una descripción')" required)
		.row
			.col-sm-4.col-xs-4.col-md-4.col-lg-4
			label Arquitectura
		.row
			.col-sm-4.col-xs-4.col-md-4.col-lg-4
			.col-sm-4.col-xs-4.col-md-4.col-lg-4
				select.form-control(ng-change="cargarTecnologias()",ng-init="data.arquitectura=arquitecturas[0]",ng-model="data.arquitectura",ng-options="arquitectura.nombre for arquitectura in arquitecturas track by arquitectura.id")
		.row
			.col-sm-4.col-xs-4.col-md-4.col-lg-4
			label Tecnologías
		.row
			.col-sm-4.col-xs-4.col-md-4.col-lg-4
			div.col-sm-4.col-xs-4.col-md-4.col-lg-4.well(ng-show="tecnologiaArquitectura.length>0")
				div(ng-repeat="tecnologia in tecnologiaArquitectura")
					.checkbox
						label
							input(type="checkbox",ng-click="toggle(tecnologia)",ng-checked="indexOf(data.tecnologias,'id',tecnologia.id)>-1")
							{{tecnologia.nombre}}
			div.col-sm-4.col-xs-4.col-md-4.col-lg-4.well(ng-show="tecnologiaArquitectura.length==0")
				strong No hay tecnologías asociadas
		.row
			.col-sm-4.col-xs-4.col-md-4.col-lg-4
			.col-sm-2.col-xs-2.col-md-2.col-lg-2
				input.btn.btn-primary(type="submit", value="Enviar")
			.col-sm-1.col-xs-1.col-md-1.col-lg-1
				button.btn.btn-secondary(ng-click="data={}") Limpiar